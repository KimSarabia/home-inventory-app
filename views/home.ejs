<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home Inventory App</title>

  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="style.css">

  <script src="/bower_components/jquery/dist/jquery.min.js"></script>
  <script src="/bower_components/moment/moment.js"></script>
  <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="home.js"></script>

</head>
<body>
  <div class="container">
    <h1 class="text-center">Home Inventory</h1>

    <button class="btn btn-default btn-lg newItem">New Item</button>


    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Description</th>
          <th>Value</th>
          <th>Room</th>
        </tr>
      </thead>
      <tbody>

        <% for(var i = 0; i < items.length; i++) { %>
          <tr data-id=<%=items[i].id%>  >
            <td><%= items[i].createdAt %></td>
            <td><%= items[i].dueDate %></td>
            <td><%= items[i].desc %></td>
            <td>
              <% if(items[i].isComplete) { %>
                <input type="checkbox" name="" id="" checked>
              <% } else { %>
                <input type="checkbox" name="" id="">
              <% } %>
            </td>
          </tr>

        <%  }  %>

      </tbody>
    </table>
  </div>



  <div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <form class='newItemForm'>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">New Item</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="newItemDesc">Description</label>
              <input type="text" class="form-control" id="newItemDesc" placeholder="Buy Eggs." required>
            </div>
            <div class="form-group">
              <label for="newItemDueDate">Due Date</label>
              <input type="date" class="form-control" id="newItemDueDate" required>
            </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Create Item</button>
          </div>
        </form>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->


</body>
</html>
